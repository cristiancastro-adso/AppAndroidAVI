<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomain"
    tools:context=".controller.Registro">

    <ScrollView
        android:id="@+id/scrollRegistro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contenedor que centra el formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="24dp">

            <!-- Card del formulario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/form"
                android:elevation="2dp"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/registro"
                    android:textColor="@color/azuloscurosena"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>

                <EditText
                    android:id="@+id/edtID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/id"
                    android:inputType="number"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/edtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nombre"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/edtFechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ðŸŽ‚Fecha de Nacimiento"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/edtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/correo"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/edtTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/telefono"
                    android:inputType="number"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/edtBarrio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ðŸ“ Barrio"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/edtDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ðŸ  DirecciÃ³n"
                    android:layout_marginBottom="12dp"/>


                <Spinner
                    android:id="@+id/spnEstudios"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="20dp"/>

                <EditText
                    android:id="@+id/edtInstitucion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Escribe el nombre"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp"/>



                <EditText
                    android:id="@+id/edtPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/contraseÃ±a"
                    android:inputType="textPassword"
                    android:layout_marginBottom="20dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnregistrado"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/registrarbtn"
                    android:textSize="18sp"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/violeta"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

