<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomain">

    <ScrollView
        android:id="@+id/scrollLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contenedor que centra el formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="24dp">

            <!-- Card del login -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/form"
                android:elevation="12dp"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inicio"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:textColor="@color/azuloscurosena"/>

                <EditText
                    android:id="@+id/edtId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/id"
                    android:inputType="number"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/azuloscurosena"
                    android:textColorHint="@color/azuloscurosena"/>

                <EditText
                    android:id="@+id/edtPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/contraseÃ±a"
                    android:inputType="textPassword"
                    android:layout_marginBottom="24dp"
                    android:textColor="@color/azuloscurosena"
                    android:textColorHint="@color/azuloscurosena"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btniniciosesion"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/inicio"
                    android:textSize="18sp"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/violeta"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
